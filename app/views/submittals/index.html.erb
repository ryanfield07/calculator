
<div class="container">
<h1 id="subHead">Submittals</h1>
<br>
<span><a id="subButt" href="/submittals/new">New Submittal</a></span>
 <br>
<div class="container-fluid subScroll col-md-12">
<table class="subTable sortable">
  <thead class="subHeadering">
    <tr class="subRow">
      <th class="subH">Req</th>
      <th class="subH">First Name</th>
      <th class="subH">Last Name</th>
      <th class="subH">Date</th>
      <th class="subH">Location</th>
      <!--<th class="subH">Br</th>
      <th class="subH">Pr</th>-->
      <th class="subH">Status</th>
      <th class="subH">Submitter</th>
      <th colspan="3" class="subH" id="optionH">Options</th>
    </tr>
  </thead>

  <tbody class="subBod">
    <% @submittals.each do |submittal| %>
      <tr class="subForm">
        <td class="subD"><%= submittal.req %></td>
        <td class="subD"><%= submittal.firstName.capitalize %></td>
 	<td class="subD"><%= submittal.lastName.capitalize %></td>
        <td class="subD"><%= submittal.date %></td>
        <td class="subD"><%= submittal.location.upcase %></td>
        <!--<td class="subD"><span>$</span><%= submittal.BR %></td>
        <td class="subD"><span>$</span><%= submittal.PR %></td>-->
        <td class="subD"><%= submittal.status.capitalize %></td>
        <td class="subD"><%= submittal.submitter.capitalize %></td>
        <td class="subD" id="option"><%= link_to 'View', submittal %></td>
        <td class="subD" id="option"><%= link_to 'Edit', edit_submittal_path(submittal) %></td>
        <td class="subD" id="option"><%= link_to 'Delete', submittal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
   <br>
<p id="notice"><%= notice %></p>
</div>
<br>
